<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_understand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="키오스크 이해를 돕는"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_dictionary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="외국어 사전"
            android:textStyle="bold"
            android:textSize="45sp" />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="라떼" />

                <TextView
                    android:id="@+id/textView2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="우유를 넣은 커피의 일종" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="메가리카노" />

                <TextView
                    android:id="@+id/textView3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="일반 아메리카노보다 큰 사이즈의 커피" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="프라푸치노" />

                <TextView
                    android:id="@+id/textView4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="얼음을 갈아 만든 시원한 음료" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="말차라떼" />

                <TextView
                    android:id="@+id/textView5_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="녹차 분말과 우유를 섞은 음료" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="샷" />

                <TextView
                    android:id="@+id/textView6_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="에스프레소 1잔" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="프라페" />

                <TextView
                    android:id="@+id/textView7_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="얼음, 커피, 우유와 달콤한 재료들을 갈아 만든 음료" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="스무디" />

                <TextView
                    android:id="@+id/textView8_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="신선한 과일을 얼려서 갈아 만든 음료" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="45dp"
                    android:text="테이크아웃" />

                <TextView
                    android:id="@+id/textView1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="포장해서 가져가기" />


            </LinearLayout>



        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>