<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_understand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="키오스크 이해를 돕는"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_dictionary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="외국어 사전"
            android:textStyle="bold"
            android:textSize="45sp" />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="45dp"
                    android:text="테이크아웃" />

                <TextView
                    android:id="@+id/textView1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="포장해서 가져가기" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="사이드메뉴" />

                <TextView
                    android:id="@+id/textView2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="감자 튀김과 같은 곁들이 메뉴" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="슈림프" />

                <TextView
                    android:id="@+id/textView3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="새우" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="프라푸치노" />

                <TextView
                    android:id="@+id/textView4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="얼음을 갈아 만든 시원한 음료" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="말차라떼" />

                <TextView
                    android:id="@+id/textView5_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="녹차 분말과 우유를 섞은 음료" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="스파이시" />

                <TextView
                    android:id="@+id/textView6_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="매운, 매콤한, 양념이 강한" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="더블" />

                <TextView
                    android:id="@+id/textView7_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="2배의" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="스무디" />

                <TextView
                    android:id="@+id/textView8_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="신선한 과일을 얼려서 갈아 만든 음료" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="크리스피" />

                <TextView
                    android:id="@+id/textView9_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22sp"
                    android:text="바삭한" />
            </LinearLayout>



        </ScrollView>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:text="닫기" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>