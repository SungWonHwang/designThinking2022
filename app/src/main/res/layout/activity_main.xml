<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="내 손안에 키오스크"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_cafePart"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFF27E"
            android:text="카페"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_foodPart"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFF27E"
            android:text="음식점"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_moviePart"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFF27E"
            android:text="영화관"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_martPart"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFF27E"
            android:text="마트"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp" />


        <Button
            android:id="@+id/btn_setting"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/settingcogwheel"
            android:text="설정"
            android:textColor="#000000"
            android:textSize="10sp" />





    </LinearLayout>

</LinearLayout>