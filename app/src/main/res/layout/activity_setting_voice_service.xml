<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="음성 안내 여부"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_voiceTrue"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#D1D0D0"
            android:drawableTop="@drawable/drawable_resize_soundtrue"
            android:text="사용함"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_voiceFalse"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#D1D0D0"
            android:drawableTop="@drawable/drawable_resize_soundfalse"
            android:text="사용안함"
            android:textColor="#000000"
            android:textSize="30sp" />


    </LinearLayout>

</LinearLayout>